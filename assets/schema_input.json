{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/narst/stylo/master/assets/schema_input.json",
    "title": "narst/stylo pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Sample name must be provided and cannot contain spaces",
                "meta": ["id"]
            },
            "fastq": {
                "type": "string",
                "format": "file-path",
                "exists": true,
                "pattern": "^\\S+\\.f(ast)?q\\.gz$",
                "errorMessage": "FastQ file for reads must be provided, cannot contain spaces and must have extension '.fq.gz' or '.fastq.gz'"
            },
            "genus": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "genus must be provided"
            },
            "species": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "species must be provided"
            }
        },
        "required": ["sample", "fastq", "genus", "species"]
    }
}
